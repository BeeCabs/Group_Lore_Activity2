<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8ACCD7 "
    tools:context=".page_4">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/retrogaming"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.873" />

    <Button
        android:id="@+id/thank"
        android:layout_width="151dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="336dp"
        android:backgroundTint="#D62046 "
        android:fontFamily="@font/retrogaming"
        android:text="Thank the cat"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/classroom"
        android:layout_width="151dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#D62046 "
        android:fontFamily="@font/retrogaming"
        android:text="Go to the classroom"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/thank"
        app:layout_constraintTop_toTopOf="@+id/thank" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="255dp"
        android:layout_height="232dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166"
        app:srcCompat="@drawable/cathappy" />

</androidx.constraintlayout.widget.ConstraintLayout>