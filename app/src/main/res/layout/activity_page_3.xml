<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1C0A0"
    tools:context=".page_3">

    <TextView
        android:id="@+id/txtvieww"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/retrogaming"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.852" />

    <Button
        android:id="@+id/gotoschool"
        android:layout_width="148dp"
        android:layout_height="66dp"
        android:layout_marginStart="28dp"
        android:backgroundTint="#379025"
        android:fontFamily="@font/retrogaming"
        android:text="ignore it and go to school"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/pet"
        app:layout_constraintTop_toTopOf="@+id/pet" />

    <Button
        android:id="@+id/pet"
        android:layout_width="148dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="344dp"
        android:backgroundTint="#379025"
        android:fontFamily="@font/retrogaming"
        android:text="pet "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="255dp"
        android:layout_height="232dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/catneutral" />
</androidx.constraintlayout.widget.ConstraintLayout>